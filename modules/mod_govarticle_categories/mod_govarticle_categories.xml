<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.4.5" client="site" method="upgrade">
	<name>mod_govarticle_categories</name>
	<author>Artur Stępień</author>
	<creationDate>October 2015</creationDate>
	<copyright>Copyright (C) 2015 Fundacja PCJ Otwarte Źródła.</copyright>
	<license>GNU General Public License v. 2.0</license>
	<authorEmail>artur.stepien@bestproject.pl</authorEmail>
	<authorUrl>http://dostepny.joomla.pl</authorUrl>
	<version>3.0.2</version>
	<description>MOD_GOVARTICLE_CATEGORIES_XML_DESCRIPTION</description>
	<files>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename module="mod_govarticle_categories">mod_govarticle_categories.php</filename>
		<filename>helper.php</filename>
	</files>
	<languages>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_categories.ini</language>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_categories.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="parent"
					type="category"
					extension="com_govarticle"
					published=""
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_PARENT_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_PARENT_DESC">
					<option value="root">JGLOBAL_ROOT</option>
				</field>

				<field
					name="show_description"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_SHOW_DESCRIPTION_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_SHOW_DESCRIPTION_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="numitems"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_NUMITEMS_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_NUMITEMS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="show_children"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_SHOW_CHILDREN_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_SHOW_CHILDREN_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="count"
					type="list"
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_COUNT_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_COUNT_DESC"
					default="0"
				>
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="maxlevel"
					type="list"
					label="MOD_GOVARTICLE_CATEGORIES_FIELD_MAXLEVEL_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_FIELD_MAXLEVEL_DESC"
					default="0"
				>
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="item_heading"
					type="list"
					default="4"
					label="MOD_GOVARTICLE_CATEGORIES_TITLE_HEADING_LABEL"
					description="MOD_GOVARTICLE_CATEGORIES_TITLE_HEADING_DESC"
				>
					<option value="1">JH1</option>
					<option value="2">JH2</option>
					<option value="3">JH3</option>
					<option value="4">JH4</option>
					<option value="5">JH5</option>
				</field>

				<field
					name="moduleclass_sfx"
					type="textarea"
					rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="owncache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
