<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_govarticle_latest</name>
	<author>Artur Stępień</author>
	<creationDate>October 2017</creationDate>
	<copyright>Copyright (C) 2017 Fundacja PCJ Otwarte Źródła.</copyright>
	<license>GNU General Public License v. 2.0</license>
	<authorEmail>artur.stepien@bestproject.pl</authorEmail>
	<authorUrl>http://dostepny.joomla.pl</authorUrl>
	<version>3.0.0</version>
	<description>MOD_GOVARTICLE_LATEST_XML_DESCRIPTION</description>
    
	<files>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>helper.php</filename>
		<filename module="mod_govarticle_latest">mod_govarticle_latest.php</filename>
	</files>
    
    <languages>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_latest.ini</language>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_latest.sys.ini</language>
	</languages>

    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="catid"
					type="category"
					label="JCATEGORY"
					description="MOD_GOVARTICLE_LATEST_FIELD_CATEGORY_DESC"
					extension="com_govarticle"
					multiple="true"
					size="10"
					default=""
					>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					label="MOD_GOVARTICLE_LATEST_FIELD_COUNT_LABEL"
					description="MOD_GOVARTICLE_LATEST_FIELD_COUNT_DESC"
					default="5"
				/>

				<field
					name="show_featured"
					type="list"
					label="MOD_GOVARTICLE_LATEST_FIELD_FEATURED_LABEL"
					description="MOD_GOVARTICLE_LATEST_FIELD_FEATURED_DESC"
					default=""
					>
					<option value="">JSHOW</option>
					<option value="0">JHIDE</option>
					<option value="1">MOD_GOVARTICLE_LATEST_VALUE_ONLY_SHOW_FEATURED</option>
				</field>

				<field
					name="ordering"
					type="list"
					label="MOD_GOVARTICLE_LATEST_FIELD_ORDERING_LABEL"
					description="MOD_GOVARTICLE_LATEST_FIELD_ORDERING_DESC"
					default="published"
					>
					<option value="c_dsc">MOD_GOVARTICLE_LATEST_VALUE_RECENT_ADDED</option>
					<option value="m_dsc">MOD_GOVARTICLE_LATEST_VALUE_RECENT_MODIFIED</option>
					<option value="p_dsc">MOD_GOVARTICLE_LATEST_VALUE_RECENT_PUBLISHED</option>
					<option value="mc_dsc">MOD_GOVARTICLE_LATEST_VALUE_RECENT_TOUCHED</option>
					<option	value="random">MOD_GOVARTICLE_LATEST_VALUE_RECENT_RAND</option>
				</field>

				<field
					name="user_id"
					type="list"
					label="MOD_GOVARTICLE_LATEST_FIELD_USER_LABEL"
					description="MOD_GOVARTICLE_LATEST_FIELD_USER_DESC"
					default="0"
					>
					<option value="0">MOD_GOVARTICLE_LATEST_VALUE_ANYONE</option>
					<option value="by_me">MOD_GOVARTICLE_LATEST_VALUE_ADDED_BY_ME</option>
					<option value="not_me">MOD_GOVARTICLE_LATEST_VALUE_NOTADDED_BY_ME</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
