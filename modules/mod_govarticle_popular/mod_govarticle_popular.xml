<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_govarticle_popular</name>
	<author>Artur Stępień</author>
	<creationDate>October 2017</creationDate>
	<copyright>Copyright (C) 2017 Fundacja PCJ Otwarte Źródła.</copyright>
	<license>GNU General Public License v. 2.0</license>
	<authorEmail>artur.stepien@bestproject.pl</authorEmail>
	<authorUrl>http://dostepny.joomla.pl</authorUrl>
	<version>3.0.0</version>
	<description>MOD_GOVARTICLE_POPULAR_XML_DESCRIPTION</description>
    
	<files>
        <folder>language</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_govarticle_popular">mod_govarticle_popular.php</filename>
	</files>
    
	<languages>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_popular.ini</language>
		<language tag="pl-PL">language/pl-PL/pl-PL.mod_govarticle_popular.sys.ini</language>
	</languages>

    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="catid"
					type="category"
					label="JCATEGORY"
					description="MOD_GOVARTICLE_POPULAR_FIELD_CATEGORY_DESC"
					extension="com_govarticle"
					multiple="true"
					size="10"
					default=""
					>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					label="MOD_GOVARTICLE_POPULAR_FIELD_COUNT_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_COUNT_DESC"
					default="5"
				/>

				<field
					name="show_front"
					type="radio"
					label="MOD_GOVARTICLE_POPULAR_FIELD_FEATURED_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_FEATURED_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>

				<field
					name="basicspacer1"
					type="spacer"
					hr="true"
				/>

				<field
					name="date_filtering"
					type="list"
					label="MOD_GOVARTICLE_POPULAR_FIELD_DATEFILTERING_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_DATEFILTERING_DESC"
					default="off"
					>
					<option value="off">MOD_GOVARTICLE_POPULAR_OPTION_OFF_VALUE</option>
					<option value="range">MOD_GOVARTICLE_POPULAR_OPTION_DATERANGE_VALUE</option>
					<option value="relative">MOD_GOVARTICLE_POPULAR_OPTION_RELATIVEDAY_VALUE</option>
				</field>

				<field
					name="date_field"
					type="list"
					label="MOD_GOVARTICLE_POPULAR_FIELD_DATEFIELD_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_DATEFIELD_DESC"
					default="a.created"
					showon="date_filtering:range,relative"
					>
					<option value="a.created">MOD_GOVARTICLE_POPULAR_OPTION_CREATED_VALUE</option>
					<option value="a.modified">MOD_GOVARTICLE_POPULAR_OPTION_MODIFIED_VALUE</option>
					<option value="a.publish_up">MOD_GOVARTICLE_POPULAR_OPTION_STARTPUBLISHING_VALUE</option>
				</field>

				<field
					name="start_date_range"
					type="calendar"
					label="MOD_GOVARTICLE_POPULAR_FIELD_STARTDATE_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_STARTDATE_DESC"
					translateformat="true"
					showtime="true"
					size="22"
					filter="user_utc"
					showon="date_filtering:range"
				/>

				<field
					name="end_date_range"
					type="calendar"
					label="MOD_GOVARTICLE_POPULAR_FIELD_ENDDATE_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_ENDDATE_DESC"
					translateformat="true"
					showtime="true"
					size="22"
					filter="user_utc"
					showon="date_filtering:range"
				/>

				<field
					name="relative_date"
					type="text"
					label="MOD_GOVARTICLE_POPULAR_FIELD_RELATIVEDATE_LABEL"
					description="MOD_GOVARTICLE_POPULAR_FIELD_RELATIVEDATE_DESC"
					default="30"
					showon="date_filtering:relative"
				/>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
